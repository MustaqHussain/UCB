@model UcbWeb.ViewModels.SiteStaffVM
@{
    ViewBag.Title = Resources.ENTITYNAME_SITESTAFF;
}
<h2>Maintain @Resources.ENTITYNAME_SITESTAFF</h2>
<script type="text/javascript">
    /// <reference path="jquery-1.7.1.js" />
    /// <reference path="jquery-ui.js" />
    $(document).ready(function () {

        var isDirty = @(Model.IsViewDirty?Html.Raw("true"):Html.Raw("false"));

        $(':input').change(function () {
            if (!isDirty) {
                isDirty = true;
            }
        });
		//;
		var $myDialogDelete = $('<div id=\'delete_dialog_fw\'></div>')
        .html('Are you sure you want to delete?<br/>Click OK to confirm.  Click Cancel to stop this action.')
        .dialog({
            autoOpen: false,
            modal: true,
            title: 'Confirmation Required',
            buttons: {
                "OK": function () {
                    $(this).dialog("close");
                    if ($('#IsDeleteConfirmed').val() == "True") {
                        var form = $('#mainForm')
                        var input = $("<input>").attr("type", "hidden").attr("name", "Edit::DeleteSiteStaff").val("");
                        form.append($(input));
                        $('#mainForm')[0].submit();
                        return true;
                    }
                }
                , "Cancel": function () {
                    $(this).dialog("close");
                    return false;
                }
            }

        });
		
		var $myDialogExit = $('<div id=\'exit_dialog_fw\'></div>')
        .html('Are you sure you want to exit?<br/>Click OK to confirm.  Click Cancel to stop this action.')
        .dialog({
            autoOpen: false,
            modal: true,
            title: 'Confirmation Required',
            buttons: {
                "OK": function () {
                    $(this).dialog("close");
                    if ($('#IsExitConfirmed').val() == "True") {
                        var form = $('#mainForm')
                        var input = $("<input>").attr("type", "hidden").attr("name", "Edit::ExitSiteStaff").val("");
                        form.append($(input));
                        $('#mainForm')[0].submit();
                        return true;
                    }
                }
                , "Cancel": function () {
                    $(this).dialog("close");
                    return false;
                }
            }

        });

        $('#mainForm').submit(function (e) {

            if ($('#mainForm').find('input[type="submit"]:focus').attr('name') == 'Edit::DeleteSiteStaff') {
                e.preventDefault();
                $('#IsDeleteConfirmed').val("True");
                var returnValue = $myDialogDelete.dialog('open');  //replace the div id with the id of the button/form
                return returnValue;
            }
            else if ($('#mainForm').find('input[type="submit"]:focus').attr('name') == 'Edit::ExitSiteStaff') {
                if (isDirty == true) {
                    e.preventDefault();
                    $('#IsExitConfirmed').val("True");
                    var returnValue = $myDialogExit.dialog('open');  //replace the div id with the id of the button/form
                    return returnValue;
                }
                else {
                    $('#IsExitConfirmed').val("True");
                    return true;
                }
            }
            else {
                return true;
            }
        });
	});
	
</script>
@using (Html.BeginForm("Edit", "SiteStaff", FormMethod.Post, new { @id = "mainForm" }))
{
    
    <div class='message'>@Model.Message</div>
    @Html.ValidationSummary(false, @Resources.ERROR_SUMMARY_TITLE, new { id = "validation_errors" })
    @Html.HiddenFor(model => model.SiteStaffItem.Code)
    <input type='hidden' id='IsDeleteConfirmed' name='IsDeleteConfirmed' value='@Model.IsDeleteConfirmed' />
    <input type='hidden' id='IsExitConfirmed' name='IsExitConfirmed' value='@Model.IsExitConfirmed' />
    <div class="full-width clearfix">
		    <fieldset class="ui-widget ui-widget-content ui-corner-all">
                <legend class="ui-widget-header ui-corner-all">@Resources.ENTITYNAME_SITESTAFF</legend>
				<div class="full-width clearfix">
					<div class="editor-label left-40">
						@Html.LabelFor(model => model.SiteStaffItem.SiteCode)
					</div>
					<div class="editor-field right-60" title='@Html.ToolTipFor(model => model.SiteStaffItem.SiteCode)'>
						@Html.DropDownListFor(model => model.SiteStaffItem.SiteCode, new SelectList(Model.SiteList, "Code", "SiteName"), @String.Format(Resources.DDL_GENERIC, @Resources.ENTITYNAME_SITE))
					</div>
					<div class="full-width clearfix">
						@Html.ValidationMessageFor(model => model.SiteStaffItem.SiteCode)
					</div>
				</div>
				<div class="full-width clearfix">
					<div class="editor-label left-40">
						@Html.LabelFor(model => model.SiteStaffItem.StaffCode)
					</div>
					<div class="editor-field right-60" title='@Html.ToolTipFor(model => model.SiteStaffItem.StaffCode)'>
						@Html.DropDownListFor(model => model.SiteStaffItem.StaffCode, new SelectList(Model.StaffList, "Code", "StaffNumber"), @String.Format(Resources.DDL_GENERIC, @Resources.ENTITYNAME_STAFF))
					</div>
					<div class="full-width clearfix">
						@Html.ValidationMessageFor(model => model.SiteStaffItem.StaffCode)
					</div>
				</div>
				@Html.EditorFor(model => model.SiteStaffItem.Responsibility, "LabelFieldAlign")
				<div class="full-width clearfix">
		            @if (Model.AccessContext == UcbWeb.ViewModels.SiteStaffAccessContext.Create)
              {
		                <input id='CreateButton' type='submit' name='Edit::CreateSiteStaff' value='@Resources.LABEL_CREATEBUTTON' title='@Resources.TOOLTIP_CREATEBUTTON @Resources.ENTITYNAME_SITESTAFF' />
              }
              else
              {
		                <input id='SaveButton' type='submit' name='Edit::SaveSiteStaff' value='@Resources.LABEL_SAVEBUTTON' title='@Resources.TOOLTIP_SAVEBUTTON @Resources.ENTITYNAME_SITESTAFF'/>
						<input id='DeleteButton' class='cancel' type='submit' name='Edit::DeleteSiteStaff' value='@Resources.LABEL_DELETEBUTTON' title='@Resources.TOOLTIP_DELETEBUTTON @Resources.ENTITYNAME_SITESTAFF'/>	            
              }    
		            <input id='ExitButton' class='cancel' type='submit' name='Edit::ExitSiteStaff' value='@Resources.LABEL_EXITBUTTON' title='@Resources.TOOLTIP_EXITBUTTON'/>
		        </div>
			</fieldset>
	</div>
}
