            if(this.value == "True"){
                $("#RIDDORFileSection").removeClass('removestuff')
            }
            else {
                $("#RIDDORFileSection").addClass('removestuff');
            }
        });

        //Incident - Display 'Fast Track file upload section' text box if 'Is Nominated RIDDOR?' set to true
